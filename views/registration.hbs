<div class="container">
  <form class="col s12 reg-form blue-text text-darken-2" method="POST" action="/" name="regForm" autocomplete="off">
    <div class="column">
      <div class="input-field col s6">
        <input placeholder="Enter your username" name="username" id="first_name" type="text" class="validate blue-grey lighten-2">
        <div id="nickErr">

        </div>
      </div>
      <div class="input-field col s6">
        <input placeholder="Enter your email" name="email" id="email" type="email" class="validate blue-grey lighten-2">
        <div id="emailErr">

        </div>
      </div>
      <div class="input-field col s6">
        <input placeholder="Enter a password" name="password" id="password" type="password" class="validate blue-grey lighten-2">
        <div id="passErr">

        </div>
      </div>
       <button class="waves-effect waves-light btn-small blue-grey darken-2">Sign Up</button>
    </div>
   
  </form>
</div>

<script src="/js/registration.js"></script>
